    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

  <div id="wrapper">
  <%= render 'site/navbar' -%> 

<% if current_page?(root_path) %>
<div class="intro" style="background-image: url(<%= image_path('bg3.jpg') -%>);">
  <div class="dtable hw100">
    <div class="dtable-cell hw100">
      <div class="container text-center">
        <h1 class="intro-title animated fadeInDown">Venda, Troque, Divulgue, Negocie!</h1>
        <p class="sub animateme fittext3 animated fadeIn">O maior classificado de equipamentos, produtos e serviços do pais!</p>
          <div class="row search-row animated fadeInUp">
          <form action="/categorias">
            <div class="col-lg-8 col-sm-8 search-col relative locationicon">
              <i class="fa fa-search icon-append"></i>
              <input type="text" name="search" class="form-control locinput input-rel searchtag-input has-icon" placeholder="Buscar Anúncio" value="">
            </div>
            <div class="col-lg-4 col-sm-4 search-col">
            <button type="submit" class="btn btn-primary btn-search btn-block"><strong> Buscar</strong></button>
            </div>
            </form>
          </div>
        </div>
    </div>
  </div>
</div>
<% end %>


<div class="main-container">
  <div class="container">
    <%#= bootstrap_flash %>
    <%= yield %>
  </div>
</div>

<div class="page-bottom-info">
  <div class="page-bottom-info-inner">
    <div class="page-bottom-info-content text-center">
      <h1>Seja Premium, assine um de nossos planos e tenha mais destaque para o seu anúncio!</h1>
      <%= link_to "<i class=\"icon-mobile\"></i> <span class=\"hide-xs color50\">Conheça nossos Planos </a>".html_safe, planos_path, :class => "btn  btn-lg btn-primary-dark" %>
     
    </div>
  </div>
</div>

<div class="footer" id="footer">
  <div class="container">
    <ul class=" pull-left navbar-link footer-nav">
      <li>
      <%= link_to '<i class="fa fa-home fa-lg"></i>'.html_safe, root_path -%>
      <%= link_to 'Sobre', sobre_path -%>
      <%= link_to 'Como Funciona', faq_path -%>
      <%= link_to 'Produtos', ver_categorias_path -%>
      <%= link_to 'Planos', planos_path -%>
      <%= link_to 'Fale Conosco', contato_path -%>
      <li>
    </ul>
    <ul class=" pull-right navbar-link footer-nav">
      <li> &copy; 2016 Anúncios Médicos - Todos Direitos Reservados</li>
    </ul>
  </div>
</div>
<%= javascript_include_tag "site" %>
<%= javascript_include_tag "https://js.iugu.com/v2" %>
<script type="text/javascript" src="http://storage.pupui.com.br/9CA0F40E971643D1B7C8DE46BBC18396/assets/formatter.6641df236f87bc55a536292d8565c870.js"></script>
<%= custom_bootstrap_flash %>
<script type="text/javascript">
  Iugu.setAccountID("4486924A0D1141BE9BF78D557E7552A2");
  Iugu.setTestMode(true); // Retirar esta linha para produção

jQuery(function ($) {
    $('#payment-form').submit(function (evt) {
            var form = $(this);
            var tokenResponseHandler = function (data) {

                if (data.errors) {
                    alert("Erro salvando cartão: " + JSON.stringify(data.errors));
                } else {
                    $("#token").val(data.id);
                    form.get(0).submit();
                }
            }

            Iugu.createPaymentToken(this, tokenResponseHandler);
            return false;
    
    });

    cc_checkbox = $('#credit-card-checkbox')
    cc_checkbox_label = $('#credit-card-checkbox-label')
    bs_checkbox = $('#bank-slip-checkbox')
    bs_checkbox_label = $('#bank-slip-checkbox-label')
    credit_card_form = $('.usable-creditcard-form')

    cc_checkbox.click(function () {
        bs_checkbox_label.removeClass("active");
        cc_checkbox_label.addClass("active");
        bs_checkbox.removeAttr("checked");
        cc_checkbox.attr("checked", "checked");
        credit_card_form.show();
    });

    bs_checkbox.click(function () {
        cc_checkbox_label.removeClass("active");
        bs_checkbox_label.addClass("active");
        cc_checkbox.removeAttr("checked");
        bs_checkbox.attr("checked", "checked");
        credit_card_form.hide();
    });
});

